{
  "title": "Request Drilldown",
  "uid": "reliability-drilldown",
  "schemaVersion": 41,
  "version": 2,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timezone": "browser",
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "label": "Instance",
        "hide": 0,
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "query": "label_values(http_server_request_duration_seconds_count{exported_job=\"observability-demo-api\"}, exported_instance)",
        "includeAll": true,
        "multi": true,
        "refresh": 2,
        "allValue": ".*"
      },
      {
        "name": "route",
        "type": "query",
        "label": "Route",
        "hide": 0,
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "query": "label_values(http_server_request_duration_seconds_count{exported_job=\"observability-demo-api\"}, http_route)",
        "includeAll": true,
        "multi": true,
        "refresh": 2,
        "allValue": ".*"
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "Traffic Map",
      "id": 100,
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }
    },
    {
      "id": 1,
      "type": "timeseries",
      "title": "RPS by Route",
      "description": "Request rate per route, stacked. A route disappearing from the stack signals dropped traffic or errors masking requests.",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2,
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 20,
            "showPoints": "never",
            "spanNulls": true,
            "stacking": { "group": "A", "mode": "normal" }
          },
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum by (http_route) (rate(http_server_request_duration_seconds_count{exported_job=\"observability-demo-api\",exported_instance=~\"$instance\",http_route=~\"$route\"}[1m]))",
          "legendFormat": "{{http_route}}",
          "refId": "A",
          "exemplar": true
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "p95 Latency by Route",
      "description": "95th-percentile latency per route. Click exemplar dots (diamonds) to open the Tempo trace for that request.",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 0,
            "showPoints": "never",
            "spanNulls": true
          },
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.95, sum by (http_route, le) (rate(http_server_request_duration_seconds_bucket{exported_job=\"observability-demo-api\",exported_instance=~\"$instance\",http_route=~\"$route\"}[1m])))",
          "legendFormat": "{{http_route}}",
          "refId": "A",
          "exemplar": true
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "5xx Rate by Route",
      "description": "Error rate per route. Click exemplar dots to jump directly to the failed Tempo trace.",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 3,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never",
            "spanNulls": true
          },
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum by (http_route) (rate(http_server_request_duration_seconds_count{exported_job=\"observability-demo-api\",exported_instance=~\"$instance\",http_route=~\"$route\",http_response_status_code=~\"5..\"}[1m]))",
          "legendFormat": "{{http_route}}",
          "refId": "A",
          "exemplar": true
        }
      ]
    },
    {
      "type": "row",
      "title": "Latency Distribution",
      "id": 101,
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 }
    },
    {
      "id": 4,
      "type": "heatmap",
      "title": "Request Duration Heatmap",
      "description": "Bucket distribution of request duration over time. Reveals bimodal distributions, latency floor shifts, and whether high-latency outliers are increasing in frequency.",
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 10 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "scaleDistribution": { "type": "log", "log": 2 }
          }
        },
        "overrides": []
      },
      "options": {
        "calculate": false,
        "yAxis": {
          "unit": "s",
          "decimals": 3
        },
        "color": {
          "scheme": "Oranges",
          "fill": "dark-orange",
          "mode": "scheme",
          "exponent": 0.5
        },
        "tooltip": {
          "mode": "single",
          "showHistogram": true
        },
        "legend": { "show": true },
        "exemplars": { "color": "rgba(255,0,255,0.7)" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum by (le) (increase(http_server_request_duration_seconds_bucket{exported_job=\"observability-demo-api\",exported_instance=~\"$instance\",http_route=~\"$route\"}[1m]))",
          "legendFormat": "{{le}}",
          "refId": "A",
          "format": "heatmap"
        }
      ]
    },
    {
      "type": "row",
      "title": "Trace & Log Bridge",
      "id": 102,
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 19 }
    },
    {
      "id": 5,
      "type": "logs",
      "title": "Error Logs",
      "description": "5xx log entries from Loki. The `instance` label filters to the selected pod(s). Each entry carries trace_id — click it to open the trace in Tempo.",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 20 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "options": {
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "{job=\"observability-demo-api\",instance=~\"$instance\"} | attributes_http_status_code >= 500",
          "refId": "A",
          "queryType": "range"
        }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "p95 Latency per Instance",
      "description": "p95 latency broken out per API instance with exemplar overlay. When instances diverge, the slower pod is the culprit. Narrow the Instance variable to a single pod and click a diamond to open that instance's Tempo trace.",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 20 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 0,
            "showPoints": "never",
            "spanNulls": true
          },
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.95, sum by (exported_instance, le) (rate(http_server_request_duration_seconds_bucket{exported_job=\"observability-demo-api\",exported_instance=~\"$instance\",http_route=~\"$route\"}[1m])))",
          "legendFormat": "{{exported_instance}}",
          "refId": "A",
          "exemplar": true
        }
      ]
    },
    {
      "type": "row",
      "title": "Process Health",
      "id": 103,
      "collapsed": true,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 29 },
      "panels": [
        {
          "id": 7,
          "type": "timeseries",
          "title": "CPU Usage %",
          "description": "CPU time consumed per instance as a percentage of one CPU core. Values above 100% indicate multi-core saturation. Sustained spikes correlate with rising p99 latency across all routes.",
          "gridPos": { "h": 7, "w": 8, "x": 0, "y": 30 },
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "fieldConfig": {
            "defaults": {
              "unit": "percent",
              "decimals": 1,
              "custom": {
                "lineWidth": 2,
                "fillOpacity": 10,
                "showPoints": "never",
                "spanNulls": true
              },
              "color": { "mode": "palette-classic" }
            },
            "overrides": []
          },
          "options": {
            "legend": { "displayMode": "list", "placement": "bottom" },
            "tooltip": { "mode": "multi", "sort": "desc" }
          },
          "targets": [
            {
              "datasource": { "type": "prometheus", "uid": "prometheus" },
              "expr": "sum by (exported_instance) (rate(dotnet_process_cpu_time_seconds_total{exported_job=\"observability-demo-api\",exported_instance=~\"$instance\"}[1m])) * 100",
              "legendFormat": "{{exported_instance}}",
              "refId": "A"
            }
          ]
        },
        {
          "id": 8,
          "type": "timeseries",
          "title": "Memory Working Set",
          "description": "Process memory working set per instance. A flat line is healthy. A steadily rising floor across restarts indicates a memory leak.",
          "gridPos": { "h": 7, "w": 8, "x": 8, "y": 30 },
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "fieldConfig": {
            "defaults": {
              "unit": "bytes",
              "custom": {
                "lineWidth": 2,
                "fillOpacity": 5,
                "showPoints": "never",
                "spanNulls": true
              },
              "color": { "mode": "palette-classic" }
            },
            "overrides": []
          },
          "options": {
            "legend": { "displayMode": "list", "placement": "bottom" },
            "tooltip": { "mode": "multi", "sort": "desc" }
          },
          "targets": [
            {
              "datasource": { "type": "prometheus", "uid": "prometheus" },
              "expr": "dotnet_process_memory_working_set_bytes{exported_job=\"observability-demo-api\",exported_instance=~\"$instance\"}",
              "legendFormat": "{{exported_instance}}",
              "refId": "A"
            }
          ]
        },
        {
          "id": 9,
          "type": "timeseries",
          "title": "GC Allocation Rate",
          "description": "Rate of heap bytes allocated per second per instance. A healthy process shows a smooth sawtooth. A rising floor between GC cycles indicates allocation pressure.",
          "gridPos": { "h": 7, "w": 8, "x": 16, "y": 30 },
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "fieldConfig": {
            "defaults": {
              "unit": "Bps",
              "custom": {
                "lineWidth": 2,
                "fillOpacity": 5,
                "showPoints": "never",
                "spanNulls": true
              },
              "color": { "mode": "palette-classic" }
            },
            "overrides": []
          },
          "options": {
            "legend": { "displayMode": "list", "placement": "bottom" },
            "tooltip": { "mode": "multi", "sort": "desc" }
          },
          "targets": [
            {
              "datasource": { "type": "prometheus", "uid": "prometheus" },
              "expr": "rate(dotnet_gc_heap_total_allocated_bytes_total{exported_job=\"observability-demo-api\",exported_instance=~\"$instance\"}[2m])",
              "legendFormat": "{{exported_instance}}",
              "refId": "A"
            }
          ]
        },
        {
          "id": 10,
          "type": "timeseries",
          "title": "Thread Pool Queue Length",
          "description": "Work items queued to the thread pool per instance. Thread pool starvation manifests as p99 rising across ALL routes simultaneously while queue length climbs.",
          "gridPos": { "h": 7, "w": 8, "x": 0, "y": 37 },
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "fieldConfig": {
            "defaults": {
              "unit": "short",
              "thresholds": {
                "mode": "absolute",
                "steps": [
                  { "color": "green", "value": null },
                  { "color": "yellow", "value": 20 },
                  { "color": "red", "value": 50 }
                ]
              },
              "custom": {
                "lineWidth": 2,
                "fillOpacity": 10,
                "showPoints": "never",
                "spanNulls": true,
                "thresholdsStyle": { "mode": "line" }
              },
              "color": { "mode": "palette-classic" }
            },
            "overrides": []
          },
          "options": {
            "legend": { "displayMode": "list", "placement": "bottom" },
            "tooltip": { "mode": "multi", "sort": "none" }
          },
          "targets": [
            {
              "datasource": { "type": "prometheus", "uid": "prometheus" },
              "expr": "dotnet_thread_pool_queue_length{exported_job=\"observability-demo-api\",exported_instance=~\"$instance\"}",
              "legendFormat": "{{exported_instance}}",
              "refId": "A"
            }
          ]
        },
        {
          "id": 11,
          "type": "timeseries",
          "title": "DB Connections: Idle vs Used",
          "description": "Overlaid idle and used connection counts per instance. The ratio matters more than the absolute values. All connections used with none idle = pool saturation imminent.",
          "gridPos": { "h": 7, "w": 8, "x": 8, "y": 37 },
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "fieldConfig": {
            "defaults": {
              "unit": "short",
              "custom": {
                "lineWidth": 2,
                "fillOpacity": 0,
                "showPoints": "never",
                "spanNulls": true
              },
              "color": { "mode": "palette-classic" }
            },
            "overrides": []
          },
          "options": {
            "legend": { "displayMode": "list", "placement": "bottom" },
            "tooltip": { "mode": "multi", "sort": "none" }
          },
          "targets": [
            {
              "datasource": { "type": "prometheus", "uid": "prometheus" },
              "expr": "db_client_connections_idle{exported_job=\"observability-demo-api\",exported_instance=~\"$instance\"}",
              "legendFormat": "idle {{exported_instance}}",
              "refId": "A"
            },
            {
              "datasource": { "type": "prometheus", "uid": "prometheus" },
              "expr": "db_client_connections_used{exported_job=\"observability-demo-api\",exported_instance=~\"$instance\"}",
              "legendFormat": "used {{exported_instance}}",
              "refId": "B"
            }
          ]
        },
        {
          "id": 12,
          "type": "timeseries",
          "title": "DB Pending Connection Requests",
          "description": "Requests waiting for a free connection from the pool. Any non-zero value means the pool is exhausted. This is the leading indicator — it appears before timeouts start.",
          "gridPos": { "h": 7, "w": 8, "x": 16, "y": 37 },
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "fieldConfig": {
            "defaults": {
              "unit": "short",
              "thresholds": {
                "mode": "absolute",
                "steps": [
                  { "color": "green", "value": null },
                  { "color": "yellow", "value": 5 },
                  { "color": "red", "value": 20 }
                ]
              },
              "custom": {
                "lineWidth": 2,
                "fillOpacity": 10,
                "showPoints": "never",
                "spanNulls": true,
                "thresholdsStyle": { "mode": "line" }
              },
              "color": { "mode": "palette-classic" }
            },
            "overrides": []
          },
          "options": {
            "legend": { "displayMode": "list", "placement": "bottom" },
            "tooltip": { "mode": "multi", "sort": "none" }
          },
          "targets": [
            {
              "datasource": { "type": "prometheus", "uid": "prometheus" },
              "expr": "db_client_connections_pending_requests{exported_job=\"observability-demo-api\",exported_instance=~\"$instance\"}",
              "legendFormat": "{{exported_instance}}",
              "refId": "A"
            }
          ]
        }
      ]
    }
  ]
}
